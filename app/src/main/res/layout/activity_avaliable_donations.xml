<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgrey"
    tools:context=".Your_donations">

    <ImageButton
        android:id="@+id/front_page_back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:src="@drawable/backingicon"
        android:background="@color/lightgrey"
        android:layout_toLeftOf="@id/profileButton"
        />


    <TextView
        android:id="@+id/DonationList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Donation List"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profileicon"
            android:background="@color/iconBackground"
            android:id="@+id/profileButton"
            android:layout_centerHorizontal="true"
            />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donationRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/DonationList"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp" />

</RelativeLayout>